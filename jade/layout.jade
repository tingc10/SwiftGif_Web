html
	head
		include ios_header
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js")
		script(src="/js/constants.js")
		script(src="/js/scripts.js")

		style
			@-webkit-keyframes pulse-opacity {
				0% { opacity: 0.45; }
				50% { opacity: 1.0; }
				100% { opacity: 0.45; }
			}

			h1,h2,h3,h4,h5,h6 { 
				padding: 0px;
				margin: 0px;
				font-family: sans-serif;
			}
	
			.gif-wrapper { 
				position: relative;
				max-width: 250px;
				margin: 0px auto 10px auto;
			}

			.gif {
				max-width: 100%;
				display: block;
			}

			.controls {
				width: 100%;
				height: 25px;
				background: rgba(0,0,0,0.80);
				position: absolute;
				bottom: 0px;
			}

			.controls h6 {
				color: #FFF;
				text-align: center;
				text-transform: uppercase;
				line-height: 25px;
			}

			.play-button {
				position: absolute;
				top: 50%;
				left: 50%;
				margin-left: -30px;
				margin-top: -30px;
				pointer-events: none;
				opacity: 1.0;

				-webkit-transition: opacity 0.25s;
			}

			.play-button.loading {
				opacity: 0.45;
				-webkit-animation: pulse-opacity 2.0s;
				-webkit-animation-timing-function: linear;
				-webkit-animation-iteration-count: infinite;
			}

			.play-button img {
				width: 60px;
				height: 60px;
				display: block;
				pointer-events: none;
			}

			.playing .play-button {
				opacity: 0.0;
			}
	
	body(style="background-color: transparent;")
		block content
